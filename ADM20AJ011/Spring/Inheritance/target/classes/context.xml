<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="fn" class="java.lang.String">
	  <constructor-arg value="Sunil"></constructor-arg>
	</bean>
	
	<bean id="stud1" class="com.cognizant.spring.Student">
		<property name="firstName" ref="fn"/>
	</bean>
	
	<bean id="stud2" parent="stud1">		
		<property name="lastName" value="Joseph"/>
	</bean>
	
	<alias name="stud1" alias="cog_stud" />
	
	<bean id="a" class="com.cognizant.spring.A" depends-on="b"/>
	<bean id="b" class="com.cognizant.spring.B" depends-on="c"/>
	<bean id="c" class="com.cognizant.spring.C"/>
</beans>
